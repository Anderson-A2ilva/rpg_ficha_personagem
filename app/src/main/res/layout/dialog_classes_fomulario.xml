                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_button_bruxo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bruxo"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_button_clerigo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Clerigo"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_button_ladino"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ladino"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_button_monge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Monge"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_button_paladino"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Paladino"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_button_cacador"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
